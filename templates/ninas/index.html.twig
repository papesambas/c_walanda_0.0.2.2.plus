{% extends 'base.html.twig' %}

{% block title %}Ninas index{% endblock %}

{% block body %}
    <h1>Ninas index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nina in ninas %}
            <tr>
                <td>{{ nina.id }}</td>
                <td>{{ nina.designation }}</td>
                <td>
                    <a href="{{ path('app_ninas_show', {'slug': nina.slug}) }}">show</a>
                    <a href="{{ path('app_ninas_edit', {'slug': nina.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ninas_new') }}">Create new</a>
{% endblock %}
