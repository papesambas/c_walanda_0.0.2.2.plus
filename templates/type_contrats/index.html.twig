{% extends 'base.html.twig' %}

{% block title %}TypeContrats index{% endblock %}

{% block body %}
    <h1>TypeContrats index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>Designation</th>
                <th>Slug</th>
                <th>actions</th>
            </tr>
