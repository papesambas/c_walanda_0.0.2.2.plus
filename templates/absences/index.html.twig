{% extends 'base.html.twig' %}

{% block title %}Absences index{% endblock %}

{% block body %}
    <h1>Absences index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>El√®ves</th>
                <th>Classe</th>
                <th>Jour</th>
                <th>IsJustify</th>
                <th>Motif</th>
                <th>Parents</th>

                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for absence in absences %}
            <tr>
                <td>{{ absence.id }}</td>
                <td>{{ absence.eleve }}</td>
                <td>{{ absence.eleve.classe }}</td>
                <td>{{ absence.jour ? absence.jour|date('d-m-Y') : '' }}</td>
                <td>{{ absence.isJustify ? 'Yes' : 'No' }}</td>
                <td>{{ absence.motif }}</td>
                <td>{{ absence.eleve.parent }}</td>
                <td>
                    <a href="{{ path('app_absences_show', {'id': absence.id}) }}">show</a>
                    <a href="{{ path('app_absences_edit', {'id': absence.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_retards_eleves') }}">Retour</a>
{% endblock %}
