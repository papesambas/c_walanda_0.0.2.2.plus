{% extends 'base.html.twig' %}

{% block title %}Cercles index{% endblock %}

{% block body %}
    <h1>Cercles index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cercle in cercles %}
            <tr>
                <td>{{ cercle.id }}</td>
                <td>{{ cercle.designation }}</td>
                <td>
                    <a href="{{ path('app_cercles_show', {'slug': cercle.slug}) }}">show</a>
                    <a href="{{ path('app_cercles_edit', {'slug': cercle.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_cercles_new') }}">Create new</a>
{% endblock %}
