{% extends 'base.html.twig' %}

{% block title %}Prenoms index{% endblock %}

{% block body %}
    <h1>Prenoms index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prenom in prenoms %}
            <tr>
                <td>{{ prenom.id }}</td>
                <td>{{ prenom.designation }}</td>
                <td>
                    <a href="{{ path('app_prenoms_show', {'slug': prenom.slug}) }}">show</a>
                    <a href="{{ path('app_prenoms_edit', {'slug': prenom.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_prenoms_new') }}">Create new</a>
{% endblock %}
