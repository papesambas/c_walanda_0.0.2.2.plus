{% extends 'base.html.twig' %}

{% block title %}Noms index{% endblock %}

{% block body %}
    <h1>Noms index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for nom in noms %}
            <tr>
                <td>{{ nom.id }}</td>
                <td>{{ nom.designation }}</td>
                <td>
                    <a href="{{ path('app_noms_show', {'slug': nom.slug}) }}">show</a>
                    <a href="{{ path('app_noms_edit', {'slug': nom.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_noms_new') }}">Create new</a>
{% endblock %}
