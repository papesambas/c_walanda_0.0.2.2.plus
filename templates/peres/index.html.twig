{% extends 'base.html.twig' %}

{% block title %}Liste des Pères{% endblock %}

{% block body %}
<div class="container-fluid mt-3">
    <h3 class="mb-4 d-flex justify-content-center fw-bold">Liste des Pères</h3>
    <div class="row">
        <!-- Filtre -->
        <div class="col-md-3">
            <div class="card w-100 p-1">
                <div class="card-body p-1">
                    <h5 class="card-title">Filtrer</h5>
                    {% include "peres/_filter.html.twig" %}
                </div>
            </div>
        </div>

        <!-- Tableau -->
        <div class="col-md-9">
            <div class="card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm">
                            <thead class="table-dark">
                                <tr>
                                    <th>Id</th>
                                    <th>Nom & Prénom</th>
                                    <th>Profession</th>
                                    <th>téléphone</th>
                                    <th>téléphone</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for pere in peres %}
                                <tr>
                                    <td>{{ pere.id }}</td>
                                    <td>{{ pere.fullname }}</td>
                                    <td>{{ pere.profession ? pere.profession : 'Non défini' }}</td>
                                    <td>{{ pere.telephone1 }}</td>
                                    <td>{{ pere.telephone2 }}</td>
                                    <td>
                                        <a href="{{ path('app_peres_show', {'slug': pere.slug}) }}" class="btn btn-info btn-sm">Voir</a>
                                        <a href="{{ path('app_peres_edit', {'slug': pere.slug}) }}" class="btn btn-warning btn-sm">Modifier</a>
                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="5" class="text-center">Aucun enregistrement trouvé.</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bouton Ajouter -->
    <div class="text-end mt-4">
        <a href="{{ path('app_peres_new') }}" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter un Nouveau Père
        </a>
    </div>
</div>

{% endblock %}