{% extends 'base.html.twig' %}

{% block title %}Departs index{% endblock %}

{% block body %}
    <h1>Departs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateDepart</th>
                <th>EcoleDestination</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for depart in departs %}
            <tr>
                <td>{{ depart.id }}</td>
                <td>{{ depart.dateDepart ? depart.dateDepart|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ depart.ecoleDestination }}</td>
                <td>
                    <a href="{{ path('app_departs_show', {'slug': depart.slug}) }}">show</a>
                    <a href="{{ path('app_departs_edit', {'slug': depart.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_departs_new') }}">Create new</a>
{% endblock %}
