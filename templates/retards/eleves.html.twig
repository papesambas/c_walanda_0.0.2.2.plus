                    },
                    'label': 'Recherche'
                }) }}
            </div>

            <!-- Plage d'Ã¢ge -->
            <div class="col-lg-2 col-md-4">
                <div class="input-group">
                    {{ form_widget(form.age1, {'attr': {'placeholder': 'Ã‚ge min', 'class': 'form-control'}}) }}
                    <span class="input-group-text bg-white">Ã </span>
                    {{ form_widget(form.age2, {'attr': {'placeholder': 'Ã‚ge max', 'class': 'form-control'}}) }}
                </div>
            </div>

            <!-- Statut -->
            {#<div class="col-lg-2 col-md-4">
                {{ form_row(form.statut, {
