                        'app_communes_show' and route != 'app_cercles_show' and route != 'app_regions_show' or route ==
                        'app_eleves_index' %}
                        <td><a class="text-black text-decoration-none"
                                href="{{ path('app_parents_show', {'slug': elefe.parent.slug}) }}">{{ elefe.parent }}</a>
