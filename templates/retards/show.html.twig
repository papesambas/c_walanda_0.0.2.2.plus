{% extends 'base.html.twig' %}

{% block title %}Retards{% endblock %}

{% block body %}
    <h1>Retards</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ retard.id }}</td>
            </tr>
            <tr>
                <th>Jour</th>
                <td>{{ retard.jour ? retard.jour|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Heure</th>
                <td>{{ retard.heure ? retard.heure|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ retard.duree ? retard.duree|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsJustify</th>
                <td>{{ retard.isJustify ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Motif</th>
                <td>{{ retard.motif }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ retard.createdAt ? retard.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ retard.updatedAt ? retard.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ retard.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_retards_index') }}">back to list</a>

    <a href="{{ path('app_retards_edit', {'id': retard.id}) }}">edit</a>

    {{ include('retards/_delete_form.html.twig') }}
{% endblock %}
