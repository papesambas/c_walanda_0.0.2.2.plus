{% extends 'base.html.twig' %}

{% block title %}Professions index{% endblock %}

{% block body %}
    <h1>Professions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for profession in professions %}
            <tr>
                <td>{{ profession.id }}</td>
                <td>{{ profession.designation }}</td>
                <td>
                    <a href="{{ path('app_professions_show', {'slug': profession.slug}) }}">show</a>
                    <a href="{{ path('app_professions_edit', {'slug': profession.slug}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_professions_new') }}">Create new</a>
{% endblock %}
