{% extends 'base.html.twig' %}

{% block title %}Specialites index{% endblock %}

{% block body %}
    <h1>Specialites index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Designation</th>
                <th>Slug</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for specialite in specialites %}
            <tr>
                <td>{{ specialite.id }}</td>
                <td>{{ specialite.designation }}</td>
                <td>{{ specialite.slug }}</td>
                <td>{{ specialite.createdAt ? specialite.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ specialite.updatedAt ? specialite.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_specialites_show', {'id': specialite.id}) }}">show</a>
                    <a href="{{ path('app_specialites_edit', {'id': specialite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_specialites_new') }}">Create new</a>
{% endblock %}
